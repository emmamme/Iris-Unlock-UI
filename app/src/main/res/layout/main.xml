<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/camview"
    >

    <com.example.emmachen.emmathesis.ui.camera.CameraSourcePreview
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.emmachen.emmathesis.ui.camera.GraphicOverlay
            android:id="@+id/faceOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.example.emmachen.emmathesis.ui.camera.CameraSourcePreview>

    <TextView
        android:id="@+id/timed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:textSize="12pt"
        android:textColor="#ffffff"
        android:elevation="15dip"/>

    <com.example.emmachen.emmathesis.GifImageView
        android:visibility="invisible"
        android:id="@+id/GifImageView"
        android:layout_width="30000dip"
        android:layout_height="30000dip"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dip"
        android:layout_centerHorizontal="true"
        android:elevation="15dip"/>

    <ImageButton
        android:backgroundTint="@color/colorPrimary"
        android:id="@+id/button_capture"
        android:src="@drawable/ic_create_white_24dp"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:elevation="15dip"
        />

    <TextView
        android:id="@+id/msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_capture"
        android:textColor="#ffffff"
        android:text="Okay"
        android:textSize="12pt"
        android:textAlignment="center"
        android:elevation="15dip"/>

    <TextView
        android:id="@+id/troll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12pt"
        android:layout_above="@id/msg"
        android:textAlignment="center"
        android:elevation="15dip"
        android:textColor="#ff0000"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationZ="10dip">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/b_back"
            android:src="@drawable/black_back"/>

        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/daisy"
            android:src="@drawable/sunflower_mask" />

        <ImageView
            android:id="@+id/little_dis"
            android:layout_width="100dip"
            android:layout_height="150dip"
            android:scaleType="centerInside"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</RelativeLayout>